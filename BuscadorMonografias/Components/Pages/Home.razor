@page "/"

<MudCard Class="mud-elevation-6" Style="max-width: 600px; margin: auto; text-align: center;">
    <MudCardMedia Image="img/image.webp" Height="350"
                  Style="object-fit: contain; width: 300px; display: block; margin: auto;" />
    <MudCardContent>
        <MudText Typo="Typo.h4" Color="Color.Tertiary" Class="mb-2">Bienvenido al Buscador de Monografías</MudText>
        <MudText Typo="Typo.body1" Class="mb-2">
            Encuentra monografías, mapas y esquemas de manera rápida y sencilla.
        </MudText>
    </MudCardContent>
    <MudCardActions Class="justify-content-center">
        <MudButton Variant="Variant.Filled" Style="background-color: #397792; color: white;" OnClick="GoToMonografias" Class="mr-8">
            Buscar Monografías
        </MudButton>

        <MudButton Variant="Variant.Filled" Style="background-color: #397792; color: white;" OnClick="GoToMapasEsquemas">
            Buscar Mapas y Esquemas
        </MudButton>
    </MudCardActions>
</MudCard>
